// Schema do banco de dados RNV Site
// Usando MySQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Contatos/Leads recebidos pelo site
model Contact {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String?
  plan      String?  // Start, Pro, Premium
  message   String   @db.Text
  source    String?  // WhatsApp, Telegram, Form
  createdAt DateTime @default(now())
  read      Boolean  @default(false)
}

// Configurações do site (para futuras expansões)
model SiteConfig {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  value     String   @db.Text
  updatedAt DateTime @updatedAt
}

// Visualizações/Analytics simples (opcional)
model PageView {
  id        Int      @id @default(autoincrement())
  page      String
  userAgent String?
  ip        String?
  country   String?
  language  String?
  createdAt DateTime @default(now())
}
